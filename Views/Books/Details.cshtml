@model BibliotecaUtad.Models.Book

@{
    ViewData["Title"] = "Details";
}

// Remover isto dps
<div>
    <a asp-action="Index">Back to List</a>
</div>

<div style="display: flex; align-items: flex-start;">
    <div style="margin: 50px 50px 0px 300px;">
        <img src="~/images/covers/@Model.CoverImage" style="width: 420px; height: 595px; object-fit: cover; border: 1px solid black;" />
    </div>
    <dl style="margin: 50px 300px 0 0; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <dd class="col-sm-10" style="font-size: 35px; font-weight: bold;">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class = "col-sm-10" style="font-size: 30px;">
            de @Html.DisplayFor(model => model.Author)
        </dd>
        <hr style="width: 800; border: 1px solid black;" />
        <dt class = "col-sm-2">
            Editora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editor)
        </dd>
        <dt class = "col-sm-2">
            Data de Lançamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LaunchDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender.GenderName) - @Html.DisplayFor(model => model.Subgender.SubGenderName)
        </dd>
        <dt class="col-sm-2">
            Sinópse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
    </dl>
</div>
