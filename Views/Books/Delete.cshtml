@model BibliotecaUtad.Models.Book

<div style="text-align: center; margin-top: 50px;">
    <h3>Tens a certeza que pretendes apagar este livro?</h3>
</div>
<div>
    <hr />
    <dl class="row text-center">
        <dt class="col-sm-12">
            <img src="~/images/covers/@Model.CoverImage" alt="Book Cover" style="width: 420px; height: 595px;" />
        </dt>
        <dt class="col-sm-12">
            @Html.DisplayFor(model => model.Title)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Author)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="text-align: center;">
        <input type="hidden" asp-for="ISBN" />
        <input type="submit" value="Apagar" class="btn btn-danger" style="width: 100px; height: 40px; font-size: 15px; font-family: 'Segoe UI'; background-color: #001733; color: white; font-weight: bold; border-radius: 10px; border: 1px solid black; margin: 10px;" />
        <a asp-action="Index" class="btn btn-primary" style="width: 100px; height: 40px; font-size: 15px; font-family: 'Segoe UI'; background-color: #de0d1d; color: white; font-weight: bold; border-radius: 10px; border: 1px solid black; margin: 10px;">Voltar</a>
    </form>
</div>
