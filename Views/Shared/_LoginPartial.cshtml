@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .btn-login {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        font-size: 16px;
        font-weight: bold; /* Texto em negrito */
        color: white;
        background-color: #08274d;
        border: 1px solid #000b1a; /* Borda preta */
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
    }

        .btn-login:hover {
            background-color: #061d3a;
        }

    .btn-register {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        font-size: 16px;
        font-weight: bold; /* Texto em negrito */
        color: white;
        background-color: #be1522;
        border: 1px solid #800e17; /* Borda preta */
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
    }

        .btn-register:hover {
            background-color: #9a121c;
        }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn-login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sessão</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-register" asp-area="Identity" asp-page="/Account/Register">Regista-te</a>
        </li>
    }
</ul>