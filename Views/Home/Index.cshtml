<div class="text-center">
    <img src="~/images/home_page_name.png"/>
    <div style="margin: 50px 0 0 440px; text-align: left; font-family: 'Segoe UI'; font-size: 30px;">ADIÇÕES RECENTES</div>
</div>

<div class="row" style="margin-top: 50px; margin-left: 430px">
    @foreach (var book in Model)
    {
        <img src="~/images/covers/@book.CoverImage" style="width: 150px; height: 212px; margin-right: 30px;" />
    }
</div>
<div class="row" style="margin: 8px 0 0 430px">
    @foreach (var book in Model)
    {
        <div style="font-family: 'Segoe UI'; font-size: 15px; font-weight: bold; margin-right: 30px; width: 150px; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Title</div>
    }
</div>
<div class="row" style="margin: 10px 0 0 430px">
    @foreach (var book in Model)
    {
        <div style="font-family: 'Segoe UI'; font-size: 10px; margin-right: 30px; width: 150px; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Author</div>
    }
</div>
