<div class="text-center">
    <img src="~/images/home_page_name.png"/>
    <div style="margin: 50px auto 0 auto; text-align: left; font-family: 'Segoe UI'; font-size: 30px; display: flex; justify-content: space-between; align-items: center; width: 50%;">
        <span>ADIÇÕES RECENTES</span>
        <button onclick="location.href='@Url.Action("ViewAllBooks", "Home")'" style="padding: 5px 20px; font-size: 15px; font-family: 'Segoe UI'; background-color: #001733; color: white; font-weight: bold; border-radius: 10px;">VER MAIS</button>
    </div>
</div>

<div style="text-align: center;">
    <hr style="width: 50%; border: 1px solid black; display: inline-block;">
</div>

<div class="row" style=" margin-left: 430px">
    @foreach (var book in Model)
    {
        <div style="margin: 30px 30px 100px 0px; text-align: center; width: 150px; height: 212px;">
            <button onclick="location.href='@Url.Action("Details", "Books", new { id = book.ISBN })'" style="width: 150px; height: 212px; margin-right: 30px; border: none; background: none; padding: 0;">
                <img src="~/images/covers/@book.CoverImage" style="width: 150px; height: 212px; object-fit: cover; margin-right: 30px; border: 1px solid black;" />
            </button>
            <div style="font-family: 'Segoe UI'; font-size: 15px; font-weight: bold; margin-right: 30px; width: 150px; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Title</div>
            <div style="font-family: 'Segoe UI'; font-size: 10px; margin-right: 30px; width: 150px; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Author</div>
        </div>
    }
</div>
