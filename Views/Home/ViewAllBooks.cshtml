<div class="row justify-content-center">  
   <div class="d-flex justify-content-start" style="margin:20px 0px 20px 200px;">
        <button onclick="location.href='@Url.Action("Index", "Home")'" style="padding: 5px 20px; font-size: 15px; font-family: 'Segoe UI'; background-color: #de0d1d; color: white; font-weight: bold; border-radius: 10px; width: 100px; height: 40px; border: 1px solid black;">Voltar</button>
    </div>
   <hr style="width: 90%; border: 1px solid black; margin-bottom: 20px;" />  
   @for (int i = 0; i < Model.Count; i += 8)  
   {  
       <div class="d-flex justify-content-center flex-wrap">  
           @for (int j = i; j < i + 8 && j < Model.Count; j++)  
           {  
               var book = Model[j];  
               <div style="margin: 30px; text-align: center; width: 150px; height: 212px;">  
                   <button onclick="location.href='@Url.Action("Details", "Books", new { id = book.ISBN })'" style="width: 150px; height: 212px; border: none; background: none; padding: 0;">  
                       <img src="~/images/covers/@book.CoverImage" style="width: 150px; height: 212px; object-fit: cover; border: 1px solid black;" />  
                   </button>  
                   <div style="font-family: 'Segoe UI'; font-size: 15px; font-weight: bold; width: 150px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Title</div>  
                   <div style="font-family: 'Segoe UI'; font-size: 10px; margin-right: 30px; width: 150px; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">@book.Author</div>  
               </div>  
           }  
       </div>  
   }  
</div>